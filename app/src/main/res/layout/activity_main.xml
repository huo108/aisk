<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="clk"
            type="com.ai.shoukuan.MainActivity.Click" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:onClick="@{()->clk.clickLogin()}"
            android:background="@color/blue">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/no_login"
                app:riv_border_color="#333333"
                android:layout_alignParentLeft="true"
                app:riv_border_width="2dp"
                app:riv_corner_radius="250dp"
                app:riv_mutate_background="true"
                app:riv_oval="false"
                app:riv_tile_mode="repeat" />

            <TextView
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_first" />
        </LinearLayout>


        <LinearLayout style="@style/wrap_layout">
            <!-- 上圆角-->
            <LinearLayout style="@style/top_layout">

                <TextView
                    style="@style/usertext"
                    android:text="我的资料" />

                <ImageView style="@style/img_arrow" />
            </LinearLayout>

            <!-- 分割线 -->
            <View style="@style/bg_line" />
            <!-- 无圆角-->
            <LinearLayout style="@style/mid_layout">

                <TextView
                    style="@style/usertext"
                    android:text="我的二维码" />

                <ImageView style="@style/img_arrow" />
            </LinearLayout>
            <!-- 分割线 -->
            <View style="@style/bg_line" />
            <!-- 无圆角-->
            <LinearLayout style="@style/mid_layout">

                <TextView
                    style="@style/usertext"
                    android:text="历史账单" />

                <ImageView style="@style/img_arrow" />
            </LinearLayout>

            <View style="@style/bg_line" />
            <!-- 下圆角-->
            <LinearLayout style="@style/bottom_layout">

                <TextView
                    style="@style/usertext"
                    android:text="充值说明" />

                <ImageView style="@style/img_arrow" />
            </LinearLayout>

        </LinearLayout>


        <!-- 全圆角-->
        <LinearLayout style="@style/wrap_layout">

            <LinearLayout style="@style/single_layout">

                <TextView
                    style="@style/usertext"
                    android:text="退出账号" />

                <ImageView style="@style/img_arrow" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>